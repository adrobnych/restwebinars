package com.sysiq.restwebinars.restexchange1.resources;


import javax.ws.rs.GET;
import javax.ws.rs.Path;
import javax.ws.rs.Produces;
import javax.ws.rs.core.MediaType;

import com.sysiq.restwebinars.restexchange1.model.managers.App;

@Path("/amount_of_uah_from/{amount}/{originCurrency}")
public class ConverterResource {

	@GET 
	@Produces(MediaType.APPLICATION_XML)
	public String getConvertedAmount(	
			@PathParam("amount") String amount,
			@PathParam("originCurrency") String originCurrency) {
		return 	
			"<checkrate xmlns=\"http://schemas.restexchange.com/setrate\">"+
				"<items>"+
					"<item>"+
						"<from>USD</from>"+
						"<to>UAH</to>"+
						"<factor>" + App.EXCHANGE_MANAGER.getRate() + "</factor>"+
					"</item>"+
				"</items>"+
				"<last_change>" + App.EXCHANGE_MANAGER.getTimeStamp() + "</last_change>"+
			"</checkrate>";
	}
}
