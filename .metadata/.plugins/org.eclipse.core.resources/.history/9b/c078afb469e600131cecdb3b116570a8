package com.sysiq.restwebinars.restexchange1.model.managers;

import java.util.Calendar;

public enum App {
	EXCHANGE_MANAGER(0);
	
	App(double rate){
		this.rate = rate;
		Calendar calendar = Calendar.getInstance();
		this.timeStamp = "" + Calendar.get(Calendar.DAY_OF_MONTH);
	}
	
	private double rate;
	private String timeStamp;
	
	synchronized public void setRate(double rate){
		this.rate = rate;
	}
	synchronized public double getRate(){
		return this.rate;
	}
	synchronized public String getTimeStamp(){
		return timeStamp;
	}
}
